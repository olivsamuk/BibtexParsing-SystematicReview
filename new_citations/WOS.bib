@article{ WOS:000467567300018,
Author = {Agarwal, Mayank and Biswas, Santosh and Nandi, Sukumar},
Title = {Discrete Event System Framework for Fault Diagnosis with Measurement
   Inconsistency: Case Study of Rogue DHCP Attack},
Journal = {IEEE-CAA JOURNAL OF AUTOMATICA SINICA},
