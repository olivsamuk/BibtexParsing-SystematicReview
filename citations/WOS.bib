@inproceedings{ WOS:000657257700093,
Author = {Ray, Dipojjwal and Bhale, Pradeepkumar and Biswas, Santosh and Nandi,
   Sukumar and Mitra, Pinaki},
Book-Group-Author = {IEEE},
Title = {ArsPAN : Attacker Revelation Scheme using Discrete Event System in
